<%#= build_html_help %>

<div class="contextual">
  <% if User.current.allowed_to?({controller: 'departments', action: 'edit'}, nil, :global => true) %>
    <td align="right"><%= link_to l(:button_edit), edit_department_path(@department), method: :get, class: 'icon icon-edit' %> </td>
  <% end %>
  <% if User.current.allowed_to?({controller: 'departments', action: 'destroy'}, nil, :global => true, ) %>
    <td align="right"><%= link_to l(:button_delete), department_path(@department), method: :delete, class: 'icon icon-del', :data => {:confirm => (l(:will_be_deleted_message)).sub(/\(s\)/, @department.name).to_s} %> </td>
  <% end %>
</div>

<style type="text/css">
  #plugin_help {
    width: 79.5em !important;
    height: 40em !important;
  }
</style>

<script type="text/javascript">
    $('#helpIcon').click(function () {
        showModal('plugin_help', '60em');
        return false;
    });
</script>