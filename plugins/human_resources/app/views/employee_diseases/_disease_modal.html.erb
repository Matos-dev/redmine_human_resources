<h3 class="title"><%= l(:label_disease) %></h3>

<% if params[:action] == "edit_disease" || params[:action] == "update_disease" %>
  <h4><%= l(:label_employee) + ": " + @employee.name %><br/></h4>

  <%= labelled_form_for :employee_disease, @disease,
                        :url => {action: 'update_disease',
                                 id: params[:id],
                                 ds_id: @disease.id},
                        :remote => true, method: :patch do |f| %>

    <%= render partial:  'disease_form', :locals => {:f => f} %>
    <p class="buttons">
      <%= submit_tag l(:button_edit), name:  nil %>
      <%= submit_tag l(:button_cancel), name:  nil, :onclick => "hideModal(this);", :type => 'button' %>
    </p>
  <% end %>
<% else %>
  <h4><%= l(:label_employee) + ": " + @employee.name %><br/></h4>
  <%= labelled_form_for :employee_disease, @disease,
                        :url => {action:  "create_disease"},
                        :remote => true do |f| %>

    <%= render partial:  'disease_form', :locals => {:f => f} %>
    <p class="buttons">
      <%= submit_tag l(:button_create), name:  nil %>
      <%= submit_tag l(:button_cancel), name:  nil,
                     :onclick => "hideModal(this);",
                     :type => 'button' %>
    </p>
  <% end %>
<% end %>