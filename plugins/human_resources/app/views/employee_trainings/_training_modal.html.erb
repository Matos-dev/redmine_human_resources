<h3 class="title"><%= l(:label_training) %></h3>

<% if params[:action] == "edit_training" || params[:action] == "update_training" %>
  <h4><%= l(:label_employee) + ": " + @employee.name %><br/></h4>

  <%= labelled_form_for :employee_training, @training,
                        :url => {action: 'update_training',
                                 id: params[:id],
                                 sk_id: @training.id},
                        :remote => true, method: :patch do |f| %>

    <%= render partial: 'training_form', :locals => {:f => f} %>
    <p class="buttons">
      <%= submit_tag l(:button_edit), name:  nil %>
      <%= submit_tag l(:button_cancel), name:  nil, :onclick => "hideModal(this);", :type => 'button' %>
    </p>
  <% end %>
<% else %>
  <h4><%= l(:label_employee) + ": " + @employee.name %><br/></h4>
  <%= labelled_form_for :employee_training, @training,
                        :url => {action:  "create_training"},
                        :remote => true do |f| %>

    <%= render partial: 'training_form', :locals => {:f => f} %>
    <p class="buttons">
      <%= submit_tag l(:button_create), name:  nil %>
      <%= submit_tag l(:button_cancel), name:  nil,
                     :onclick => "hideModal(this);",
                     :type => 'button' %>
    </p>
  <% end %>
<% end %>